# Test Environment Variables

# Application
NODE_ENV=test
PORT=8001
API_VERSION=v1
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/test_db
DB_POOL_MIN=1
DB_POOL_MAX=5

# Redis
REDIS_URL=redis://:redis_password@localhost:6380/1
REDIS_TTL=900

# Authentication
JWT_SECRET=test-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=test-refresh-token-secret-at-least-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=4

# Email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=test@example.com
EMAIL_FROM_NAME=Test App

# File Upload
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES=image/jpeg,image/png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=error
LOG_PRETTY=false

# WebSocket
WS_PORT=8002

# Export
