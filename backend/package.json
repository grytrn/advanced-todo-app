{
  "name": "todo-app-backend",
  "version": "1.0.0",
  "description": "Backend API for the fancy TODO application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "generate": "prisma generate",
    "seed": "tsx src/seeds/seed.ts",
    "socket:test": "tsx src/realtime/client-example.ts"
  },
  "keywords": [
    "todo",
    "api",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.8.0",
    "@sentry/node": "^9.30.0",
    "@sentry/profiling-node": "^9.30.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tiptap/core": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@types/bcrypt": "^5.0.2",
    "@types/socket.io-client": "^3.0.0",
    "archiver": "^6.0.1",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cron": "^4.3.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "fastify-zod": "^1.4.0",
    "handlebars": "^4.7.8",
    "ical-generator": "^6.0.1",
    "ioredis": "^5.3.2",
    "marked": "^11.1.1",
    "nodemailer": "^6.9.8",
    "otplib": "^12.0.1",
    "pino": "^9.7.0",
    "puppeteer": "^21.7.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cron": "^2.4.3",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.1",
    "eslint": "^8.56.0",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
